      quiz = JSON.parse(data);
    } else {
      console.warn(`Quiz file not found: ${jsonPath}`);
    }
  } catch (e) {
    console.error(`Error loading quiz for slug: ${slug}`, e.message);
  }

  return {
    props: {
      quiz,
      lessonSlug: slug,
    },
  };
}

